
<div class="well clearfix">
	<div class="col-sm-6">
		<div class="btn-group" role="group">
			<button {{action 'onReload' }} type="button" class="btn btn-sm btn-default">Reload Table</button>
		</div>
	</div>
	<div class="col-sm-6">
		<div class="btn-group" role="group">
			<button type="button" {{action 'onPage' 'prev'}} class="btn btn-sm btn-info">Prev Page</button>
			<button type="button" {{action 'onPage' 'next'}} class="btn btn-sm btn-info">Next Page</button>
			<button type="button" {{action 'onPage' 1}} class="btn btn-sm btn-info">Page 1</button>
			<button type="button" {{action 'onPage' 3}} class="btn btn-sm btn-info">Page 3</button>
		</div>

		<div class="btn-group" role="group">
			<button type="button" {{action 'onLimit' 10}} class="btn btn-sm btn-primary">Show 10</button>
			<button type="button" {{action 'onLimit' 30}} class="btn btn-sm btn-primary">Show 30</button>
			<button type="button" {{action 'onLimit' -1}} class="btn btn-sm btn-primary">show All</button>
		</div>


		<button class="btn btn-sm btn-primary" {{action 'onNotifyChecked'}}> Notify Selected Items</button>
	</div>
	<div class="col-sm-6">
		<div class="btn-group" role="group">
			<button {{action 'toggleColumn' 'first_name'}} class="btn btn-sm btn-default">Toggle field FirstName</button>
			<button {{action 'toggleColumn' 'last_name'}} class="btn btn-sm btn-default">Toggle field LastName</button>
			<button {{action 'toggleColumn' 'cost'}} class="btn btn-sm btn-default">Toggle field Cost</button>
		</div>
	</div>	

	<div class="clearfix"></div>
	<div class="col-sm-6">
		<form class="form-inline">
			<div class="form-group">
				<input type="text" 
					class="form-control" 
					onkeypress={{action 'onSearch'}}
					id="query-name" 
					placeholder="Jane Doe" 
					/>
			</div>
		</form>
	</div>
	<div class="col-sm-6"></div>
</div>


<div class="col-sm-11">
	{{aw-datatable
		options=dataTableConfig
		}}
	<div class="col-sm-12">
		{{tt.pageNumber}}/{{tt.pageCount}}
	</div>
</div>
<div class="col-sm-1">
	{{#each log as |_log|}}
		{{_log}}
	{{/each}}
</div>
{{outlet}}
